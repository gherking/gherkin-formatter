{
  "name": "gherkin-formatter",
  "version": "1.0.2",
  "description": "Tool to format gherkin-ast model to gherkin string",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run buildUpdate && npm test -- --coverage && npm run typedoc",
    "buildUpdate": "npm run clean && npm run compile && npm run copyToDist",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --out ./docs ./src && touch ./docs/.nojekyll",
    "clean": "rimraf ./dist ./docs",
    "test": "jest --coverage",
    "tslint": "tslint -c tslint.json ./src/**/*.ts ./tests/**/*.ts",
    "compile": "tsc && npm run tslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gherking/gherkin-formatter.git"
  },
  "keywords": [
    "Gherkin",
    "Feature",
    "Scenario",
    "Scenario Outline",
    "Background",
    "Step",
    "Examples",
    "AST"
  ],
  "author": "GherKing (https://github.com/gherking)",
  "license": "MIT",
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "**/*.js.map"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": {
    "url": "https://github.com/gherking/gherkin-formatter/issues"
  },
  "homepage": "https://github.com/gherking/gherkin-formatter#readme",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "colors": "1.4.0",
    "copyfiles": "^2.1.0",
    "gherkin-io": "^1.0.1",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^6.1.3",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "eol": "^0.9.1",
    "gherkin-ast": "^3.0.2",
    "table": "^6.8.0"
  },
  "resolutions": {
    "colors": "1.4.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
